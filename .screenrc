shell /bin/zsh
startup_message off
history 10000

# utf8
defutf8 on
# scrollback lines
defscrollback 1000

hardstatus on
hardstatus alwayslastline
hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H %{..Y} %D %y/%m/%d %c "

